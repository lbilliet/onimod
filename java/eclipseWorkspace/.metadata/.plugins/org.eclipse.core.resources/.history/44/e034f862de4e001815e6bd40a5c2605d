			System.out.println("Il y a quelques années cependant, elles étaient au nombre de : " + nbPlanetes);
			break;
		case 10:
			System.out.println("Au cours de l'ère moderne, le nombre de planètes n'a jamais été officiellement de : " + nbPlanetes);
			break;

		}
		
